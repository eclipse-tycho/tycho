			<artifactId>target-platform-configuration</artifactId>
			<version>${tycho-build-version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho</artifactId>
