			<artifactId>maven-verifier</artifactId>
			<version>1.2</version>
		</dependency>

		<dependency>
			<groupId>bcel</groupId>
			<artifactId>bcel</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- update site tests -->
		<dependency>
			<groupId>org.mortbay.jetty</groupId>
