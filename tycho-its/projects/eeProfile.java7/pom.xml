<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>tycho-its-project.eeProfile.java7</groupId>
	<version>1.0.0-SNAPSHOT</version>
	<artifactId>parent</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>bundle</module>
		<module>feature</module>
		<module>repository1</module>
		<module>repository2</module>
	</modules>

	<repositories>
		<repository>
			<!-- this repository should not be needed -> see bug 385835 -->
			<id>launchers</id>
			<layout>p2</layout>
			<url>${launchers-repo}</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<executionEnvironment>JavaSE-1.7</executionEnvironment>
				</configuration>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-p2-repository-plugin</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<!-- to ease programmatic assertions -->
						<compress>false</compress>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
