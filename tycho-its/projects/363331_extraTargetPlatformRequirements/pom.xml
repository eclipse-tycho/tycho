<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>tycho-its-project</groupId>
  <artifactId>363331_extraTargetPlatformRequirements</artifactId>
  <version>1.0.0</version>
  <packaging>eclipse-test-plugin</packaging>

  <properties>
    <tycho-version>0.13.0</tycho-version>
    <e342-repo>http://download.eclipse.org/releases/ganymede</e342-repo>
    <e352-repo>http://download.eclipse.org/releases/galileo</e352-repo>
  </properties>

  <repositories>
    <repository>
      <id>e342</id>
      <layout>p2</layout>
      <url>${e342-repo}</url>
    </repository>
    <repository>
      <id>e352</id>
      <layout>p2</layout>
      <url>${e352-repo}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <extraRequirements>
            <!-- additionally constrain equinox version  -->
            <requirement>
              <type>eclipse-plugin</type>
              <id>org.eclipse.osgi</id>
              <versionRange>[3.4,3.5)</versionRange>
            </requirement>
          </extraRequirements>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
