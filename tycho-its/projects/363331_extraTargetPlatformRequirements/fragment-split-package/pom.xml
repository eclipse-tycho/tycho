<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>tycho-its-project.363331_extraTargetPlatformRequirements.fragment-split-package</groupId>
  <artifactId>parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <description>
  'bundle.tests' imports a package split between 'bundle' and 'fragment'. This tests asserts that
  Tycho is able to include both 'bundle' and 'fragment' on compile classpath and when running the
  tests.
  </description>

  <properties>
    <e342-repo>http://download.eclipse.org/releases/ganymede</e342-repo>
  </properties>

  <modules>
    <module>bundle</module>
    <module>fragment</module>
    <module>bundle.tests</module>
  </modules>

  <repositories>
    <repository>
      <id>e342</id>
      <layout>p2</layout>
      <url>${e342-repo}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>

</project>
