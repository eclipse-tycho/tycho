<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>tycho-its-project.compiler.jdt.bree.java8</groupId>
  <artifactId>c.j.b.j.parent</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <!-- TODO Remove -->
  <properties>
    <tycho-version>2.1.0-SNAPSHOT</tycho-version>
  </properties>
  <modules>
    <module>c.j.b.j.bundle</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-compiler-plugin</artifactId>
          <version>${tycho-version}</version>
          <configuration>
            <useJDK>BREE</useJDK>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
