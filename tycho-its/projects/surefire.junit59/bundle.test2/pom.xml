<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eclipse.tycho.tycho-its.surefire-junit5</groupId>
  <artifactId>bundle.test.junit59_2</artifactId>
  <packaging>eclipse-test-plugin</packaging>
  <version>1.0.0</version>
  
  <repositories>
    <repository>
      <id>eclipse202003</id>
      <layout>p2</layout>
      <url>${target-platform}</url>
    </repository>
    <repository>
      <id>newOrbit</id>
      <layout>p2</layout>
      <url>https://download.eclipse.org/tools/orbit/simrel/orbit-aggregation/2025-03</url>
    </repository>
  </repositories>
  <properties>
  	<tycho-version>5.0.0-SNAPSHOT</tycho-version>
  	<target-platform>https://download.eclipse.org/releases/2024-12/</target-platform>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-surefire-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <excludedGroups>slow</excludedGroups>
<!--          <debugPort>5005</debugPort>-->
		  <showEclipseLog>true</showEclipseLog>
<!--		  <classLoaderOrder>testProbeFirst</classLoaderOrder>-->
		  <printBundles>true</printBundles>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
