<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>tycho-its-project.resolver.optionalDependencies</groupId>
  <artifactId>rod.require-bundle</artifactId>
  <version>1.0.0</version>
  <packaging>eclipse-plugin</packaging>

  <properties>
    <target-platform>http://download.eclipse.org/releases/latest</target-platform>
  </properties>

  <repositories>
    <repository>
      <id>e342</id>
      <layout>p2</layout>
      <url>${target-platform}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <!-- the default value for optionalDependencies is require -->
    </plugins>

  </build>

</project>
