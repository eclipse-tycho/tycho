<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.eclipse.tycho.tycho-its.testProvisionedApplication</groupId>
  <artifactId>testProvisionApplication</artifactId>
  <version>1.0.0</version>
  <packaging>eclipse-test-plugin</packaging>
  <parent>
  	<groupId>org.eclipse.tycho.tycho-its</groupId>
  	<artifactId>testProvisionedApplication</artifactId>
  	<version>1.0.0</version>
  </parent>

  <build>
  	<plugins>
  		<plugin>
  			<groupId>org.eclipse.tycho</groupId>
  			<artifactId>tycho-surefire-plugin</artifactId>
  			<version>${tycho-version}</version>
  			<configuration>
  				<provisionInstallation>true</provisionInstallation>
  				<productsIU>p2-director-product</productsIU>
  			</configuration>
  		</plugin>
  	</plugins>
  </build>

  <repositories>
  	<repository>
  		<id>application-repository</id>
  		<layout>p2</layout>
  		<!-- Set in TestProvisionedApplication -->
  		<url>file:${product-repo-url}</url>
  	</repository>
  </repositories>

</project>
