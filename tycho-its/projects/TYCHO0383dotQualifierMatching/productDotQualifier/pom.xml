<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>

  <groupId>productDotQualifier</groupId>
  <artifactId>productDotQualifier.parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <packaging>pom</packaging>

  <properties>
    <tycho-version>0.9.0-SNAPSHOT</tycho-version>
    <p2.repo>http://download.eclipse.org/eclipse/updates/3.5</p2.repo>
  </properties>

  <repositories>
    <repository>
      <id>p2</id>
      <layout>p2</layout>
      <url>${p2.repo}</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86_64</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>
    </plugins>

  </build>

  <modules>
    <module>productDotQualifier.plugin</module>
    <module>productDotQualifier.product</module>
  </modules>
</project>
