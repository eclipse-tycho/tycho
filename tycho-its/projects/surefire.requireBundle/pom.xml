<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.tycho.tycho-its.surefire.requireBundle</groupId>
	<artifactId>parent</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0</version>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>withTest</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<compilerArgs>-warn:+discouraged,forbidden</compilerArgs>
				<compilerArgs2>-warn:-unused,raw,unchecked,suppress,deprecation</compilerArgs2>
				<compilerDebug>-g:none</compilerDebug>
			</properties>
			<build>
				<defaultGoal>clean install</defaultGoal>
			</build>
		</profile>
	</profiles>
	
	<modules>
		<module>org.eclipse.tycho.build</module>
		<module>org.eclipse.tycho.bundle</module>
		<module>org.eclipse.tycho.bundletest</module>
		<module>org.eclipse.tycho.platform</module>
	</modules>
</project>
  