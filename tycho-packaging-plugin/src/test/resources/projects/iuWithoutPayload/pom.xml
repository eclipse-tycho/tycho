<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>428310</groupId>
  <artifactId>iuWithoutPayload</artifactId>
  <packaging>p2-iu</packaging>
  <version>1.0.0</version>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-packaging-plugin</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <basedir>target/projects/iuWithoutPayload</basedir>
          <outputDirectory>target/projects/iuWithoutPayload/target</outputDirectory>
          <artifactContentFolder>payload</artifactContentFolder>
        </configuration>
      </plugin>      
    </plugins>
  </build>

</project>
