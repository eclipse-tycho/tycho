<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.tycho</groupId>
		<artifactId>tycho-surefire</artifactId>
		<version>0.18.0-SNAPSHOT</version>
	</parent>

	<artifactId>tycho-surefire-plugin</artifactId>
	<packaging>maven-plugin</packaging>

	<name>Tycho Surefire Plugin (Incubation)</name>

	<properties>
		<equinox.common.version>3.6.100.v20120522-1841</equinox.common.version>
		<equinox.p2.publisher.version>1.2.0.v20121002-080415</equinox.p2.publisher.version>
		<equinox.p2.metadata.version>2.1.0.v20120430-2001</equinox.p2.metadata.version>
		<equinox.p2.core.version>2.2.0.v20120430-0525</equinox.p2.core.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.plexus</groupId>
				<artifactId>plexus-component-metadata</artifactId>
				<version>${plexusVersion}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate-metadata</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.plexus</groupId>
			<artifactId>plexus-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>sisu-equinox-launching</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.tycho.surefire.osgibooter</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.tycho.surefire.junit</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.tycho.surefire.junit4</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>org.eclipse.tycho.surefire.junit47</artifactId>
			<version>${project.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.surefire</groupId>
			<artifactId>surefire-api</artifactId>
			<version>${surefire-version}</version>
		</dependency>

		<!-- required dependencies for parsing p2.inf files 
		
			NOTE: these dependencies should be hosted somewhere. You can find them in tycho-surefire-plugin\additionalBundles  
		
		-->
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>org.eclipse.equinox.p2.core</artifactId>
			<version>${equinox.p2.core.version}</version>
			<scope>system</scope>
			<systemPath>${basedir}/additionalBundles/org.eclipse.equinox.p2.core_2.1.1.v20120113-1346.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>org.eclipse.equinox.p2.publisher</artifactId>
			<version>${equinox.p2.publisher.version}</version>
			<scope>system</scope>
			<systemPath>${basedir}/additionalBundles/org.eclipse.equinox.p2.publisher_1.2.0.v20110815-1419.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>org.eclipse.equinox.common</artifactId>
			<version>${equinox.common.version}</version>
			<scope>system</scope>
			<systemPath>${basedir}/additionalBundles/org.eclipse.equinox.common_3.6.0.v20110523.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>org.eclipse.equinox.p2.metadata</artifactId>
			<version>${equinox.p2.metadata.version}</version>
			<scope>system</scope>
			<systemPath>${basedir}/additionalBundles/org.eclipse.equinox.p2.metadata_2.1.0.v20110815-1419.jar</systemPath>
		</dependency>
	</dependencies>
</project>
