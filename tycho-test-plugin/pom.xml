<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.eclipse.tycho</groupId>
    <artifactId>tycho</artifactId>
    <version>6.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>tycho-test-plugin</artifactId>
  <name>Tycho Test Plugin</name>
  <description>Running Tests inside an OSGi framework</description>
  <packaging>maven-plugin</packaging>
  <prerequisites>
		<maven>${minimal-maven-version}</maven>
	</prerequisites>
	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.plugin-tools</groupId>
			<artifactId>maven-plugin-annotations</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.platform</groupId>
			<artifactId>org.eclipse.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.tycho</groupId>
			<artifactId>tycho-core</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-plugin-plugin</artifactId>
				<!-- workaround for
				https://issues.apache.org/jira/browse/MPLUGIN-504 -->
				<configuration>
					<goalPrefix>tycho-test</goalPrefix>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>